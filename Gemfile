# frozen_string_literal: true

source 'https://rubygems.org'

gemspec

# Gem management
gem 'bundler', '~> 1.16.0'

# Development
# Ruby linter
gem 'rubocop', group: :development
# Documentation generater
gem 'yard', group: :development

# Test
# Test framework
gem 'rspec', '~> 3.7.0', group: :test
# Test coverage tools
gem 'simplecov', require: false, group: :test

# Debug
# Provide breakpoint, type 'byebug' any where in the code to open a ruby console when it's hit
gem 'byebug', '~> 10.0.2', platforms: %i(mri mingw x64_mingw), group: %i(development test)
